import java.util.Scanner;

public class Ex3 {

	public static void main(String[] args) {
		
		Scanner teclado = new Scanner(System.in);
		int t, t2;
		double f = 0;
		
		System.out.println("Insira a temperatura inicial em Celsius: ");
		t = teclado.nextInt();
		
		System.out.println("Insira a temperatura final em Celsius");
		t2 = teclado.nextInt();
		
		// usar for talvez? provavelmente não
		while(t <= t2) {
			f = (9 * t)/5 + 32;
			System.out.println(t + " ---> " + f + String.format("%.4f", f));
		}

	}

}
